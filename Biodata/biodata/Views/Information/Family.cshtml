@using biodata.Models
@model Family

@{
    ViewBag.Title = "Family";
    Layout = "../Shared/_InformationLayout.cshtml";
}

<h3 class="well well-sm">
    Family
    <span class="help-block" style="font-size: 11px;">Who should people contact when they are interested in this biodata? This information will be displayed in the top right corner of your biodata.</span>
</h3>

<div class="col-sm-12 well well-sm" style="background-color: whitesmoke; padding: 5px;">
    @Html.Partial("_ProgressWizard", new ProgressWizard { Step = 6 })
</div>

<div class="col-sm-12 well well-sm">
    <div class="row">

        @using (Html.BeginForm("Family", "Information"))
        {
            <div class="col-sm-12">
                <div class="text-right text-danger" style="font-size: 12px;">
                    <span class="glyphicon glyphicon-asterisk"></span> Required field
                </div>

                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label>Designation</label>
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Name, new
                       {
                           type = "text",
                           placeholder = "e.g. - Father Name",
                           @class = "form-control",
                           @data_toggle = "tooltip",
                           title = "Enter Father Name"
                       })
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger", style = "font-size: 12px;" })
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>Location</label>
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Location, new
                       {
                           type = "text",
                           placeholder = "e.g. - Location",
                           @class = "form-control",
                           title = "Enter your Location",
                           data_toggle = "tooltip"
                       })
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger", style = "font-size: 12px;" })
                    </div>

                    <div class="col-sm-4 form-group">
                        <label>State</label>
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.State, new
                       {
                           type = "text",
                           placeholder = "e.g. - State",
                           @class = "form-control",
                           title = "Enter State",
                           data_toggle = "tooltip"
                       })
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger", style = "font-size: 12px;" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label>Designation</label>
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Designation, new
                        {
                            type = "text",
                            placeholder = "e.g. - Designation",
                            @class = "form-control",
                            data_toggle = "tooltip",
                            title = "Enter Designation"
                        })
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Designation, "", new { @class = "text-danger", style = "font-size: 12px;" })
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>Company Name</label>
                        @Html.TextBoxFor(x => x.CompanyName, new { type = "text", placeholder = "e.g. - CompanyName", @class = "form-control" })
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>Job Location</label>
                        @Html.TextBoxFor(x => x.JobLocation, new { type = "text", placeholder = "e.g. - Job Location", @class = "form-control" })
                    </div>
                </div>

                @Html.ActionLink("Back", "Career", "Information", new { }, new { @class = "btn btn-default pull-left" })

                <button type="submit" class="btn btn-primary pull-right">Save & Continue</button>
            </div>
        }
       
    </div>
</div>