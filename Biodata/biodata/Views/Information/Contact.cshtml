@using biodata.Models

@{
    ViewBag.Title = "Contact";
    Layout = "../Shared/_InformationLayout.cshtml";
}

<h3 class="well well-sm">
    Contact
    <span class="help-block" style="font-size: 11px;">Who should people contact when they are interested in this biodata? This information will be displayed in the top right corner of your biodata.</span>
</h3>

<div class="col-sm-12 well well-sm" style="background-color: whitesmoke; padding: 5px;">
    @Html.Partial("_ProgressWizard", new ProgressWizard { Step = 2 })
</div>

<div class="col-sm-12 well well-sm">
    <div class="row">
        <form>
            <div class="col-sm-12">
                <div class="text-right text-danger" style="font-size: 12px;"><span class="glyphicon glyphicon-asterisk"></span> Required field</div>

                <div class="row">
                    <div class="col-sm-6 form-group">
                        <label>Name of the contact person</label>
                        <div class="input-group">
                            <input type="text" placeholder="e.g. - Prateek Gangwar" class="form-control" data-toggle="tooltip"
                                   title="Enter name of the person who people can email or call when they are interested in this biodata. (Usually the father or sibling)">
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label>Relationship with candidate</label>
                        <div class="input-group">
                            <select id="relationship" class="form-control" data-toggle="tooltip"
                                    title="What is the relationship of the contact person to the candidate? (Usually it's the father or a sibling)">
                                <option selected="selected" value="1">Self</option>
                                <option value="2">Father</option>
                                <option value="3">Mother</option>
                                <option value="4">Brother</option>
                                <option value="5">Sister</option>
                                <option value="6">Friend</option>
                                <option value="7">Other Relative</option>
                                <option value="14">Grandfather</option>
                            </select>
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <label>Phone Number</label>
                        <div class="input-group">
                            <input type="text" placeholder="e.g. - +91-9164865382" class="form-control" title="At least one phone number is required" data-toggle="tooltip">
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label>Email Address</label>
                        <div class="input-group">
                            <input type="text" placeholder="e.g. - @Html.Encode("contact@biodata.com")" class="form-control" data-toggle="tooltip"
                                   title="Where can people email if they are interested in this biodata? This email will also serve as your username.">
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                        <span class="text-danger" style="font-size: 11px;">Can't be blank</span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <div class="input-group">
                        <textarea placeholder="e.g. - #34, shri rama temple road" rows="2" class="form-control"></textarea>
                        <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label>City</label>
                        <div class="input-group">
                            <input type="text" placeholder="e.g. - Bangalore" class="form-control">
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>State</label>
                        <div class="input-group">
                            <input type="text" placeholder="e.g. - Karnataka" class="form-control">
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>Zip</label>
                        <div class="input-group">
                            <input type="text" placeholder="e.g. - 560034" class="form-control">
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                    </div>
                </div>

                <br />

                @Html.ActionLink("Back", "Dashboard", "Home", new { }, new { @class = "btn btn-default pull-left" })

                <button type="submit" class="btn btn-primary pull-right">Save & Continue</button>
            </div>
        </form>
    </div>
</div>