@using biodata.Models
@model Personal

@{
    ViewBag.Title = "Personal";
    Layout = "../Shared/_InformationLayout.cshtml";
}

<h3 class="well well-sm">
    Personal
    <span class="help-block" style="font-size: 11px;">Who should people contact when they are interested in this biodata? This information will be displayed in the top right corner of your biodata.</span>
</h3>

<div class="col-sm-12 well well-sm" style="background-color: whitesmoke; padding: 5px;">
    @Html.Partial("_ProgressWizard", new ProgressWizard { Step = 2 })
</div>

<div class="col-sm-12 well well-sm">
    <div class="row">
        @using (Html.BeginForm("Personal", "Information"))
        {
            <div class="col-sm-12">
                <div class="text-right text-danger" style="font-size: 12px;">
                    <span class="glyphicon glyphicon-asterisk"></span> Required field
                </div>

                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label>Name</label>
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Name, new
                            {
                                type = "text",
                                placeholder = "e.g. - Prateek Gangwar",
                                @class = "form-control",
                                @data_toggle = "tooltip",
                                title = "Enter name of the person who's resume belong to"
                            })
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger", style = "font-size: 12px;" })
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>Date of birth</label>
                        <div class="input-group">

                            @Html.TextBoxFor(x => x.DateOfBirth, new
                            {
                                type = "text",
                                placeholder = "e.g. - 16-Aug-1989",
                                @class = "form-control",
                                @data_toggle = "tooltip",
                                title = "Enter date of birth"
                            })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span> </span>
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger", style = "font-size: 12px;" })
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>Time of birth</label>
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.TimeOfBirth, new
                            {
                                type = "text",
                                placeholder = "e.g. - 01:56 PM",
                                @class = "form-control",
                                title = "Enter time of birth",
                                data_toggle = "tooltip"
                            })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.TimeOfBirth, "", new { @class = "text-danger", style = "font-size: 12px;" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 form-group">
                        <label>Birth place</label>
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Birthplace, new
                            {
                                type = "text",
                                placeholder = "e.g. - Bangalore",
                                @class = "form-control",
                                data_toggle = "tooltip",
                                title = "Birth place"
                            })
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Birthplace, "", new { @class = "text-danger", style = "font-size: 12px;" })
                    </div>
                    <div class="col-sm-3 form-group">
                        <label>Complexion</label>
                        <div class="input-group">
                            @Html.DropDownListFor(x => x.Complexion, new SelectList(Model.ComplexionList),
                                new
                                {
                                    id = "complexion",
                                    @class = "form-control",
                                    data_toggle = "tooltip",
                                    title = "Select complexion"
                                })
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>

                        @*<label>Complexion</label>
                        @Html.TextBoxFor(x => x.Complexion, new { type = "text", placeholder = "e.g. - Weatish", @class = "form-control" })*@
                    </div>
                    <div class="col-sm-3 form-group">
                        <label>Current City</label>
                        @Html.TextBoxFor(x => x.CurrentCity, new { type = "text", placeholder = "e.g. - Bangalore", @class = "form-control" })
                    </div>
                    <div class="col-sm-3 form-group">
                        <label>Height</label>
                        
                        <div class="input-group">
                            @Html.DropDownListFor(x => x.Height, new SelectList(Model.HeightList),
                            new
                            {
                                id = "height",
                                @class = "form-control",
                                data_toggle = "tooltip",
                                title = "Select Height"
                            })
                            <span class="input-group-addon "><span class="glyphicon glyphicon-asterisk text-danger"></span></span>
                        </div>

                        @*@Html.TextBoxFor(x => x.Height, new { type = "text", placeholder = "e.g. - Height", @class = "form-control" })*@
                    </div>
                </div>

                @Html.ActionLink("Back", "Contact", "Information", new { }, new { @class = "btn btn-default pull-left" })

                <button type="submit" class="btn btn-primary pull-right">Save & Continue</button>
            </div>
        }
    </div>
</div>

@section Scripts
{
    <script>
        $(function () {
            $('#DateOfBirth').datetimepicker({
                format: 'D-MMM-YYYY'
            });

            $('#TimeOfBirth').datetimepicker({
                format: 'LT'
            });
        });
    </script>
}